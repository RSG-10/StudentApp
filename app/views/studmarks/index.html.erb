<section id="callback" class="hoc clear"> 
  <div>
    <h6 class="heading">Student Marks</h6>
<p id="notice"><%= notice %></p>


<table>
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Mark1</th>
      <th>Mark2</th>
      <th>Mark3</th>
      <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @studmarks.each do |studmark| %>
      <tr>
        <td><%= studmark.firstname %></td>
        <td><%= studmark.lastname %></td>
        <td><%= studmark.mark1 %></td>
        <td><%= studmark.mark2 %></td>
        <td><%= studmark.mark3 %></td>
        <td><%= studmark.total %></td>
        <td><%= link_to 'Show', studmark ,:class=>"linkbtn" %></td>
        <td><%= link_to 'Edit', edit_studmark_path(studmark) ,:class=>"linkbtn" %></td>
        <td><%= button_to 'Destroy', studmark, method: :delete, :class=>"borderclass",data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Studmark', new_studmark_path %>
</div>
</section>
</div>
